<!doctype html>
<html>
  <head>
    <title>CMS</title>
    <link href='/cms.css' rel='stylesheet' type='text/css' />
    <link rel="shortcut icon" href="/favicon.ico">
  </head>
  <body>
    <div>
      <% if session[:error] %>
        <p class='message'><%= session.delete(:error) %></p>
      <% end %>
      <% if session[:success] %>
        <p class='message'><%= session.delete(:success) %></p>
      <% end %>
    </div>

    <div>
      <%== yield %>
    </div>

  </body>
</html>
